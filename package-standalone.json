{
  "name": "amazon-dhc-onboarding-standalone",
  "version": "1.0.0",
  "description": "Amazon DHC Onboarding Tool - Self-contained Desktop App",
  "main": "app-standalone.js",
  "scripts": {
    "start": "node start-app.js",
    "electron": "electron app-standalone.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist-win": "electron-builder --win --publish=never",
    "dist-mac": "electron-builder --mac --publish=never",
    "dist-linux": "electron-builder --linux --publish=never",
    "dist-all": "electron-builder --win --mac --linux --publish=never"
  },
  "dependencies": {
    "electron": "^25.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.amazon.dhc.onboarding.standalone",
    "productName": "Amazon DHC Onboarding Tool",
    "directories": {
      "output": "dist-standalone"
    },
    "files": [
      "app-standalone.js",
      "standalone-app.html",
      "user-data/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "user-data",
        "to": "user-data",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
